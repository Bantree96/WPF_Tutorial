<Window x:Class="MultiWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Content="1번 모니터" Click="Button_Click"/>
            <Button Grid.Row="1" Content="2번 모니터" Click="Button_Click_1"/>
            <Button Grid.Row="2" Content="3번 모니터" Click="Button_Click_2"/>
        </Grid>

        <Grid Grid.Column="1">
            <Button Content="카메라 설정" />
        </Grid>
        
        
    </Grid>
</Window>
