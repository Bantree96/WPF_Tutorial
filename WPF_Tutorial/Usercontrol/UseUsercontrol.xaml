<Window x:Class="WPF_Tutorial.Usercontrol.UseUsercontrol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WPF_Tutorial.Usercontrol"
        xmlns:local="clr-namespace:WPF_Tutorial.Usercontrol"
        mc:Ignorable="d"
        Title="UseUsercontrol" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <uc:LimitText Title="Enter title: " MaxLength="30" Height="50"/>
        <uc:LimitText Title="Enter Description: " MaxLength="140" Grid.Row="1"/>
    </Grid>
</Window>
