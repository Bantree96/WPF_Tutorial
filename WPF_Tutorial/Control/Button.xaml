<Window x:Class="WPF_Tutorial.Control.Button"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tutorial.Control"
        mc:Ignorable="d"
        Title="Button" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Width="100" Height="100" Click="Button_Click">Hello, World!</Button>
            <Button Background="Beige" Foreground="Blue" FontWeight="Bold" Width="150" >Formatteed Button</Button>
            <Button Padding="5">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Image/minimize.png" Width="20"/>
                    <TextBlock Margin="5.0">Help</TextBlock>
                </StackPanel>
            </Button>
            
        </StackPanel>
        
        
    </Grid>
</Window>
